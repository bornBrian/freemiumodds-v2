{
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" }
  ],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/scheduler/fetch-daily",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/scheduler/update",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/scheduler/update-results",
      "schedule": "*/30 * * * *"
    }
  ]
}
