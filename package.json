{
  "name": "freemiumodds-v2",
  "version": "2.0.0",
  "description": "Football predictions platform with double chance odds - Free hosting ready",
  "main": "api/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "nodemon api/index.js",
    "build": "cd client && npm run build",
    "start": "node api/index.js",
    "install:all": "npm install && cd client && npm install",
    "verify": "node verify.js",
    "setup": "node setup.js",
    "test": "echo \"Tests coming soon\" && exit 0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "@supabase/supabase-js": "^2.39.3",
    "node-fetch": "^3.3.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
